const express = require("express");
const router = express.Router();
const nlpEngine = require("../config/nlpConfig");

/**
 * @swagger
 * /chat:
 *   post:
 *     summary: Elabora un messaggio con il motore NLP
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               message:
 *                 type: string
 *                 description: Messaggio dell'utente da elaborare
 *                 example: "Ciao, qual è il meteo di oggi?"
 *     responses:
 *       200:
 *         description: Risultato elaborato dal motore NLP
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 intent:
 *                   type: string
 *                   description: Intent rilevato
 *                   example: "inform_weather"
 *                 entities:
 *                   type: array
 *                   description: Entità estratte dal messaggio
 *                   items:
 *                     type: object
 *                     properties:
 *                       entity:
 *                         type: string
 *                         description: Nome dell'entità
 *                         example: "location"
 *                       value:
 *                         type: string
 *                         description: Valore dell'entità
 *                         example: "Roma"
 */
router.post("/", async (req, res) => {
  const { message } = req.body;

  try {
    const response = await nlpEngine.parseMessage(message);
    res.json(response);
  } catch (error) {
    console.error(error);
    res.status(500).send("Errore durante l'elaborazione del messaggio");
  }
});

module.exports = router;

const express = require('express');
const MessageController = require('../controllers/messageController');
const router = express.Router();

/**
 * @swagger
 * /chat:
 *   post:
 *     summary: Invia un messaggio al chatbot
 *     description: Questa endpoint permette di inviare un messaggio al chatbot e ricevere una risposta.
 *     requestBody:
 *       required: true
 *       content:
 *         application/json:
 *           schema:
 *             type: object
 *             properties:
 *               message:
 *                 type: string
 *                 description: Il messaggio da inviare al chatbot.
 *                 example: "Ciao, come stai?"
 *     responses:
 *       200:
 *         description: Risposta ricevuta con successo
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 responses:
 *                   type: array
 *                   items:
 *                     type: object
 *                     properties:
 *                       text:
 *                         type: string
 *                         description: La risposta generata dal chatbot.
 *                         example: "Ciao! Sto bene, grazie. Come posso aiutarti?"
 *       400:
 *         description: Richiesta non valida (messaggio mancante)
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 error:
 *                   type: string
 *                   description: Messaggio di errore.
 *                   example: "Message is required"
 *       500:
 *         description: Errore interno del server
 *         content:
 *           application/json:
 *             schema:
 *               type: object
 *               properties:
 *                 error:
 *                   type: string
 *                   description: Messaggio di errore.
 *                   example: "Internal server error"
 */

router.post('/chat', MessageController.chat);

module.exports = router; 
const MessageService = require('../services/messageService');

class MessageController {
  static async chat(req, res) {
    const { message } = req.body;

    if (!message) {
      return res.status(400).json({ error: 'Message is required' });
    }

    try {
      const botResponse = await MessageService.handleMessage(message);
      res.json({ responses: [{ text: botResponse }] });
      console.log('Risposta inviata al frontend:', { responses: [{ text: botResponse }] });
    } catch (error) {
      console.error("Errore nel controller:", error.message);
      res.status(500).json({ error: 'Internal server error' });
    }
  }
}

module.exports = MessageController;
